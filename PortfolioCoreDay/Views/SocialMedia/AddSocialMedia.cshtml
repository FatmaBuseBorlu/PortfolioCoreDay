@model PortfolioCoreDay.Entities.SocialMedia

@{
    ViewData["Title"] = "Yeni Sosyal Medya Ekle";
}

<h2>Yeni Sosyal Medya Ekle</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label>Başlık</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>İkon</label>
        <input asp-for="Icon" class="form-control" placeholder="fab fa-instagram" />
        <small class="form-text text-muted">Font Awesome sınıfı (örneğin: <b>fab fa-twitter</b>)</small>
    </div>
    <div class="form-group">
        <label>Url</label>
        <input asp-for="Url" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
