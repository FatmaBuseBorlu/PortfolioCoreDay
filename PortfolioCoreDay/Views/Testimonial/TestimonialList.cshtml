@model List<PortfolioCoreDay.Entities.Testimonial>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referens Adı</th>
        <th>Referens Unvan</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="" class="btn btn-danger">Sil</a></td>
            <td><a href="" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
   
</table>
<a href="" class="btn btn-info">Yeni Referans Girişi</a>

